<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.kin.sdk.demo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".DemoApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".view.WalletActivity" />
        <activity
            android:name=".view.SendTransactionActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".view.TransactionLoadTestingActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".view.InvoicesActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".view.CreateInvoiceActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".view.FullInvoiceActivity"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>
